                text: 'Habit 1'
            Label:
                text: 'Habit 2'
            Label:
                text: 'Habit 3'
            Label:
                text: 'Habit 4'
            Label:
                text: 'Habit 5'
            Label:
                text: 'Habit 6'
            Widget:
                canvas:
                    Rectangle:
                        pos: (30,40)
                        size: (50,50)
            Widget:
                canvas:
                    Rectangle:
                        pos: (20,20)
                        size: (50,50)




